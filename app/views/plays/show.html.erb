<div class="row">
    <div class="col-md-4">
        <%= image_tag @play.play_img.url(:play_show), class: "play-show" %>
    </div>
    
    <div class="col-md-8">
        <div>
            <h2><%= @play.title %></h2>
            <h3><span>From </span><%= @play.director %></h3>
            <h4><%= @play.category.name %></h4>
            <p><%= @play.description %></p>
        </div>
    </div>
</div>

<div class="links btn-group">
    <% if user_signed_in? %>
        <% if @play.user_id == current_user.id %>
            <%= link_to "Edit", edit_play_path(@play), class: "btn btn-custom" %>
            <%= link_to "Delete", play_path(@play), method: :delete, class: "btn btn-custom", data: {confirm: "Are you sure?" }%>
        <% end %>
    <% end %>
</div>
